---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const posts = await getCollection("posts");
---

<Layout>
	<h1>Blog</h1>
	<ul>
		{posts.map(post => (
			<li>
				<a href={`/blog/${post.id}`}><strong>{post.data.title}</strong></a>: {post.data.description}
			</li>
		))}
	</ul>
</Layout>

